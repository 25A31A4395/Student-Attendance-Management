#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    char attendance;
};

void addStudent() {
    struct Student s;
    FILE *fp = fopen("attendance.dat", "ab");

    printf("Enter Roll Number: ");
    scanf("%d", &s.roll);
    printf("Enter Name: ");
    scanf(" %[^\n]", s.name);

    s.attendance = 'A'; 
    fwrite(&s, sizeof(s), 1, fp);
    fclose(fp);

    printf("Student added successfully.\n");
}

void markAttendance() {
    struct Student s;
    int roll, found = 0;
    char att;
    FILE *fp = fopen("attendance.dat", "rb+");

    printf("Enter Roll Number: ");
    scanf("%d", &roll);

    while (fread(&s, sizeof(s), 1, fp)) {
        if (s.roll == roll) {
            printf("Mark Attendance (P/A): ");
            scanf(" %c", &att);
            s.attendance = att;
            fseek(fp, -sizeof(s), SEEK_CUR);
            fwrite(&s, sizeof(s), 1, fp);
            found = 1;
            break;
        }
    }

    fclose(fp);

    if (found)
        printf("Attendance marked successfully.\n");
    else
        printf("Student not found.\n");
}

void viewAttendance() {
    struct Student s;
    FILE *fp = fopen("attendance.dat", "rb");

    if (fp == NULL) {
        printf("No records found.\n");
        return;
    }

    printf("\nRoll\tName\t\tAttendance\n");
    printf("---------------------------------\n");

    while (fread(&s, sizeof(s), 1, fp)) {
        printf("%d\t%s\t\t%c\n", s.roll, s.name, s.attendance);
    }

    fclose(fp);
}

int main() {
    int choice;

    do {
        printf("\n--- Student Attendance Management ---\n");
        printf("1. Add Student\n");
        printf("2. Mark Attendance\n");
        printf("3. View Attendance\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: addStudent(); break;
            case 2: markAttendance(); break;
            case 3: viewAttendance(); break;
            case 4: printf("Exiting...\n"); break;
            default: printf("Invalid choice.\n");
        }
    } while (choice != 4);

    return 0;
}
